      </selectKey>
      insert into ALBUM
      (ALBUMID, GENREID, ARTISTID, TITLE, PRICE, ALBUMARTURL)
      values
      <iterate conjunction="," open="" close="" property="AlbumsList">
        <![CDATA[ 
            (#AlbumsList[]#) 
        ]]>
      </iterate>
